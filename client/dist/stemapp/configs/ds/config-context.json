{
  "pages": {
    "default": {
      "id": "default",
      "label": "page 1",
      "layout": {"LARGE": "page-default-layout"},
      "isDefault": true
    }
  },
  "theme": "themes/default",
  "widgets": {
    "provider-state-widget": {
      "uri": "widgets/samples/data-sources/data-context/data-provider-widget",
      "useDataSources": [
        {
          "dataSourceId": "states",
          "fields": ["state_name", "state_abbr"]
        }
      ],
      "config": {
        "queryTip": "state name",
        "innerWidgetIds": ["provider-consumer-city-widget", "consumer-widget-state"]
      }
    },
    "provider-consumer-city-widget": {
      "uri": "widgets/samples/data-sources/data-context/data-consumer-provider-widget",
      "useDataSources": [
        {
          "dataSourceId": "cities",
          "fields": ["areaname", "st"]
        }, {
          "dataSourceId": "states",
          "isInherited": true
        }
      ],
      "config": {
        "queryTip": "city name",
        "innerWidgetIds": ["consumer-widget-state-city"]
      }
    },
    "consumer-widget-state": {
      "uri": "widgets/samples/data-sources/data-context/data-consumer-widget"
    },
    "consumer-widget-state-city": {
      "uri": "widgets/samples/data-sources/data-context/data-consumer-widget"
    }
  },
  "layouts": {
    "page-default-layout": {
      "type": "FIXED",
      "order": ["1"],
      "content": {
        "1": {
          "type": "WIDGET",
          "widgetId": "provider-state-widget",
          "bbox": {
            "left": 100,
            "top": 100,
            "width": 800,
            "height": 800
          }
        }
      }
    }
  },
  "dataSources": {
    "states": {
      "type": "FEATURE_QUERY",
      "url": "https://sampleserver6.arcgisonline.com/arcgis/rest/services/USA/MapServer/2"
    },
    "cities": {
      "type": "FEATURE_QUERY",
      "url": "https://sampleserver6.arcgisonline.com/arcgis/rest/services/USA/MapServer/0"
    }
  }
}